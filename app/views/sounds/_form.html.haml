= form_with(model: sound) do |form|
  - if sound.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(sound.errors.count, "error")
        prohibited this sound from being saved:
      %ul
        - sound.errors.each do |error|
          %li= error.full_message
  .form-group
    = form.label :name, style: "display: block"
    = form.text_field :name, class: "form-control"
  .form-group
    = form.label :position, style: "display: block"
    = form.text_field :position, class: "form-control"

  .form-group
    = form.label :audio, style: "display: block"
    = form.file_field :audio, class: "form-control"
  %br/
  = form.submit class: 'btn btn-primary btn-lg btn-block'
